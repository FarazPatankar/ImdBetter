<div class="container">
  <div class="row">
    <a class="btn right" href="/actors/new">Add an Actor</a>
  </div>
  <div class="row">
    <% @actors.each do |actor| %>
      <div class="col s4">
          <div class="card">
            <div class="card-image">
              <%= image_tag actor.photo_url, class: "materialboxed height-250" %>
              <span class="card-title"><%= actor.name %></span>
            </div>
            <div class="card-content">
              <p>Born on: <%= actor.dob %></p>
            </div>
            <div class="card-action">
              <a href="/actors/<%= actor.id %>">View More</a>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>